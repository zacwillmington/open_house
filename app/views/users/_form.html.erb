
<%= form_for @user, html: {class: 'custom-form'} do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
    <br>
    <%= f.label :phone, "Contact number" %>
    <%= f.text_field :phone %>
    <br>
    <%= label_tag :'user[admin]', "Check for admin access" %>
    <%= check_box_tag :'user[admin]', checked = true %>
    <br>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>
