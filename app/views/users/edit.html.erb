<h1>Edit Account</h1>

<%= render partial: 'errors', locals: { user: @user }  %>

<%= form_for( @user, html: {class: 'custom-form'} )do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :phone, "Contact number" %>
    <%= f.text_field :phone %>
    <br>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
    <% if @user.admin %>
            <br>
        <%= label_tag :'user[admin]', "Remove admin access" %>
        <%= check_box_tag :'user[admin]', checked = false %>
    <% end %>
    <br>
    <%= f.submit class: 'btn btn-primary'%>
<% end %>

<%= form_tag user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } do %>
    <%= submit_tag "Delete Account", class: 'btn btn-primary' %>
<% end %>
