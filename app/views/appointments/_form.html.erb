<%= form_for @appointment , :url => apartment_appointments_path(@apartment), class: 'custom-from' do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
    <h4>Open house time: <%= @apartment.reformat_date_time %></h4>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :apartment_id, :value => @apartment.id %>
    <%= f.hidden_field :time, :value =>  @apartment.available_times %>
    <%= f.submit class: "btn btn-primary"  %>
<% end %>
