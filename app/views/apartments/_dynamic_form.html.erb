<%= form_tag '/appointments', class: 'custom-from hidden' do |f| %>
    <%= text_field_tag 'name', 'Your Name..' %>
    <%= hidden_field_tag 'user_id', :value => current_user.id %>
    <%= hidden_field_tag 'apartment_id', :value => @apartment.id %>
    <%= hidden_field_tag 'time', :value =>  @apartment.available_times %>
    <%= submit_tag 'Submit Appointment',class: "btn btn-primary js-submit-appointment"  %>
<% end %>
