
<%= form_for(@apartment, html: {class: "form-group custom-form"}) do |f| %>

    <%= f.label :address, "Address" %>
    <%= f.text_field :address %>
    <br>
    <%= f.label :image, "Add Image" %>
    <%= f.file_field :image %>
    <br>
    <%= f.label :price, "Price" %>
    <%= f.number_field :price %>
    <br>
    <%= f.label :bedrooms, "Number of bedrooms" %>
    <%= f.number_field :bedrooms  %>
    <br>
    <%= f.label :bathrooms, "Number of bathrooms" %>
    <%= f.number_field :bathrooms %>
    <br>
    <%= f.label :parking, "Number of parking spaces" %>
    <%= f.number_field :parking %>
    <br>
    <%= f.label :available_times, "Showing Time" %>
    <%= f.datetime_select :available_times, :ampm => true, :minute_step => 30 %>
    <br>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>
